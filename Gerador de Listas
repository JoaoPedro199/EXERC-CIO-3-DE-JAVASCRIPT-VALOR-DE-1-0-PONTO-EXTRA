<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Gerador de Listas</title>
    
    <style>
        body {
            font-family: sans-serif;
            padding: 20px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .caixa-gerador {
            border: 1px solid black;
            padding: 20px;
            text-align: center;
            vertical-align: top;
            width: 50%;
        }

        input, button {
            padding: 8px;
            margin: 5px;
        }

        ul {
            list-style-position: inside;
            text-align: left;
            display: inline-block;
            margin-top: 15px;
        }
    </style>
</head>

<body>

    <h1 style="text-align: center;">Geradores de Lista</h1>
    <hr>

    <table>
        <tr>
            <td class="caixa-gerador">
                <h2>Gerador de Lista</h2>
                
                <label for="campoNumero1">Digite um número:</label>
                <input type="number" id="campoNumero1" placeholder="Ex: 5">
                <button onclick="gerarLista1()">Gerar Lista</button>
                
                <div id="resultado1"></div>
            </td>

            <td class="caixa-gerador">
                <h2>Gerador de Lista</h2>

                <label for="campoNumero2">Digite um número:</label>
                <input type="number" id="campoNumero2" placeholder="Digite 5">
                <button onclick="gerarLista2()">Gerar Lista</button>

                <div id="resultado2"></div>
            </td>
        </tr>
    </table>

    <script>
        function gerarLista1() {
            var input = document.getElementById("campoNumero1");
            var resultadoDiv = document.getElementById("resultado1");
            var numero = input.value;

            if (numero === "") {
                resultadoDiv.innerHTML = "<p>Por Favor, insira um número válido.</p>";
            } else {
                var numeroConvertido = parseInt(numero, 10);
                var listaHtml = "<ul>";

                for (var i = 1; i <= numeroConvertido; i++) {
                    listaHtml += "<li>Item " + i + "</li>";
                }

                listaHtml += "</ul>";
                resultadoDiv.innerHTML = listaHtml;
            }
        }

        function gerarLista2() {
            var input = document.getElementById("campoNumero2");
            var resultadoDiv = document.getElementById("resultado2");
            var numero = input.value;
            
            var seuNome = prompt("Por favor, digite seu nome:", "Fulano"); 
            
            if (numero !== "") {
                 var numeroConvertido = parseInt(numero, 10);
                 var listaHtml = "<ul>";

                 for (var i = 1; i <= numeroConvertido; i++) {
                     listaHtml += "<li>Item " + i + "</li>";
                 }
                 
                 listaHtml += "<li>" + seuNome + "</li>";
                 
                 listaHtml += "</ul>";
                 resultadoDiv.innerHTML = listaHtml;
            } else {
                 resultadoDiv.innerHTML = "<p>Por favor, insira um número.</p>";
            }
        }
    </script>

</body>
</html>
